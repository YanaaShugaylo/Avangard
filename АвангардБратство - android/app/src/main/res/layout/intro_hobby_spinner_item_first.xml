<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_inputfield_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/hobby_item_title_tv"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/offset_16"
        android:layout_marginTop="@dimen/offset_14"
        android:layout_marginBottom="@dimen/offset_14"
        android:layout_weight="1"
        android:textAlignment="textStart"
        tools:text="Something" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/offset_4"
        android:layout_marginEnd="@dimen/offset_18"
        app:srcCompat="@drawable/arrow_triangle_bottom_icon" />
</LinearLayout>