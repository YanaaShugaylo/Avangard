<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/toolbar_back_arrow_button_iv"
        android:layout_width="@dimen/default_button_minimum_size"
        android:layout_height="@dimen/default_button_minimum_size"
        android:paddingHorizontal="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/arrow_hook_left_icon" />

    <TextView
        android:id="@+id/toolbar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/offset_14"
        android:textColor="@color/text_color_toolbar"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/toolbar_notifications_button_iv"
        android:layout_width="@dimen/default_button_minimum_size"
        android:layout_height="@dimen/default_button_minimum_size"
        android:paddingHorizontal="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/toolbar_profile_button_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/toolbar_profile_button_iv"
        android:layout_width="@dimen/default_button_minimum_size"
        android:layout_height="@dimen/default_button_minimum_size"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/vTimer"
        android:layout_width="61dp"
        android:layout_height="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/timer_drawable"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_profile_button_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/timer"
        app:layout_constraintBottom_toBottomOf="@+id/vTimer"
        app:layout_constraintEnd_toEndOf="@+id/vTimer"
        app:layout_constraintStart_toStartOf="@+id/vTimer"
        app:layout_constraintTop_toTopOf="@+id/vTimer" />

</androidx.constraintlayout.widget.ConstraintLayout>