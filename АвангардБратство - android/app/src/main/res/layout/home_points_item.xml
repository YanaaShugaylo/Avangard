<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/offset_8"
    android:layout_marginBottom="@dimen/offset_8"
    app:cardCornerRadius="@dimen/base_card_corners_radius"
    app:cardElevation="@dimen/base_card_elevation">

    <TextView
        android:id="@+id/points_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="@dimen/offset_18"
        android:layout_marginTop="@dimen/offset_14"
        android:layout_marginBottom="@dimen/offset_16"
        tools:text="У тебя 1276 баллов" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/offset_30"
        android:paddingTop="@dimen/offset_8"
        android:paddingBottom="@dimen/offset_8"
        android:text="@string/home_points_exchange_text"
        android:textColor="@color/base_accent_color" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginTop="@dimen/offset_2"
        android:layout_marginEnd="@dimen/offset_18"
        app:srcCompat="@drawable/arrow_hook_right_icon" />

</androidx.cardview.widget.CardView>