<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/offset_14"
    android:elevation="@dimen/base_card_elevation"
    app:cardCornerRadius="@dimen/base_card_corners_radius">

    <TextView
        android:id="@+id/education_common_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginVertical="@dimen/offset_24"
        android:layout_marginStart="@dimen/offset_16" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/offset_16"
        app:srcCompat="@drawable/arrow_hook_right_icon"
        app:tint="@color/base_color_inputfield_title" />
</androidx.cardview.widget.CardView>